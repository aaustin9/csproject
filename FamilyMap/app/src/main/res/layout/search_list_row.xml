<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/searchPersonIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/android"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/searchLine1"
        android:textSize="16dp"
        android:layout_alignTop="@+id/searchPersonIcon"
        android:layout_toRightOf="@+id/searchPersonIcon"
        android:layout_toEndOf="@+id/searchPersonIcon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:text="Oops!"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/searchLine2"
        android:textSize="16dp"
        android:layout_below="@+id/searchLine1"
        android:layout_toRightOf="@+id/searchPersonIcon"
        android:layout_toEndOf="@+id/searchPersonIcon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="This program is experiencing technical difficulties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>